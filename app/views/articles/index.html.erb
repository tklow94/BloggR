<h1 class="text-center mt-4">My Articles</h1>


<div class="container">
<% @articles.each do |article|%>
    <div class = "row justify-content-md-center">
    <div class = "col-8 mt-4">
<div class="card text-center shadow mb-5 bg-white rounded">
  <div class="card-header font-italic">
    Featured
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
    <p class="card-text"><%=truncate(article.description, lenght: 100)%></p>
    <%= link_to 'View', article_path(article), class:"btn btn-outline-success" %> 
    <%= link_to 'Edit', edit_article_path(article), class:"btn btn-outline-info" %> 
    <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-outline-danger" %> 
  
  </div>
  <div class="card-footer text-muted">
    <small>Creted <%= time_ago_in_words(article.created_at) %> ago,
    edited ago <%= time_ago_in_words(article.updated_at) %> </small>
  </div>
</div>
</div>
</div>
<%end%>
</div>

